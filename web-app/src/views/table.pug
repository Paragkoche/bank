doctype html
html
  head
    title Bank Data
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")

  body
    .container.mt-5
      h2.text-center Form Submitted Successfully
      p.text-center.text-success Your form data has been processed.

      // Display Form Data
      h4 Form Data
      table.table.table-bordered
        thead
          tr
            th Expenses
            th Earn
            th Postcode
        tbody
          tr
            td= formData.expenses
            td= formData.earn
            td= formData.postcode

      // Display Bank Data
      h4.mt-4 Bank Data
      table.table.table-striped
        thead
          tr
            th Bank
            th Value
            th Rate
        tbody
          each value, bank in data
            tr
              td= bank
              td= value.value
              td= value.rate

      a.btn.btn-primary.mt-3(href="/") Go Back
