doctype html
html
  head
    title Bank Data
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")

  body
    .container.mt-5
      h2.text-center.text-success Form Submitted Successfully
      p.text-center Your form data has been processed.

      // Display Form Data
      h4 Form Data
      table.table.table-bordered
        thead
          tr
            th Expenses
            th Earn
            th Borrow
            th Postcode
        tbody
          tr
            td= formData.expenses
            td= formData.earn
            td= formData.borrow
            td= formData.postcode

      // Display Bank Data
      h4.mt-4 Bank Data
      table.table.table-striped
        thead
          tr
            th Bank
            th Value
            th DTI
            th Rate
        tbody
          each value, bank in data
            tr
              td= bank
              td= value.value
              - var dti = (formData.earn != 0) ? (formData.borrow / formData.earn).toFixed(2) : 'N/A'
              td= dti
              td= value.rate

      a.btn.btn-primary.mt-3(href="/") Go Back
